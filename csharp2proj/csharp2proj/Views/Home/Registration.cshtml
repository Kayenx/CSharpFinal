@{
    ViewData["Title"] = "Registrace";
}

@using Microsoft.AspNetCore.Mvc
@model RegistrationForm


<h1>Registrace </h1>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(x => x.FName, new { @for = "FName" })
        @Html.TextBoxFor(x => x.FName, new { @class = "form-control", @id = "FName" })
        @Html.ValidationMessageFor(x => x.FName)

    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.LName, new { @for = "LName" })
        @Html.TextBoxFor(x => x.LName, new { @class = "form-control", @id = "LName" })
        @Html.ValidationMessageFor(x => x.LName)

    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Username, new { @for = "username" })
        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @id = "username" })
        @Html.ValidationMessageFor(x => x.Username)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Password, new { @for = "password" })
        @Html.PasswordFor(x => x.Password, new { @class = "form-control", @id = "password" })
        @Html.ValidationMessageFor(x => x.Password)
    </div>

    <div class="form-group" style="padding-top:10px">
        <button class="btn btn-primary" type="submit">Registrovat</button>
    </div>
}
