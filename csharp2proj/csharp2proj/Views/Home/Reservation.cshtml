@using ORMLib
@model List<Book>

    @{
        ViewData["Title"] = "Dostupné knihy";
    }

    <h2 class="display-4">Knihy k dispozici</h2>

    @if (Model.Count == 0)
    {
        <p>Žádné knihy nejsou k dispozici.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Název</th>
                    <th>Žánr</th>
                    <th>Autor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>@book.Genre</td>
                        <td>@book.Author</td>
                        <td>

                            <button class="btn btn-primary" type="submit">@Html.ActionLink("Rezervovat", "AddReservation", "Home", new { book_id = book.ID }, new { style = "text-decoration:none;color:black;" }) </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
