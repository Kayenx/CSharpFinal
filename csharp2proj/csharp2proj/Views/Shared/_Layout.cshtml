@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Knihovna</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item nav-link text-dark">@Html.ActionLink("Knihovna", "Index", "Home", null, new { style = "color:#000;font-weight:500;" })</li>
                    @if (ViewContext.HttpContext.Session.GetString("username") == null)
                    {
                        <li class="nav-item nav-link text-dark">@Html.ActionLink("Přihlášení", "Login", "Home", null, new { style = "color:#000;font-weight:500;" })</li>
                        <li class="nav-item nav-link text-dark">@Html.ActionLink("Registrace", "Registration", "Home", null, new { style = "color:#000;font-weight:500;" })</li>
                    }
                        @if (ViewContext.HttpContext.Session.GetString("username") != null)
                        {
                            <li class="nav-item nav-link text-dark">@Html.ActionLink("Rezervace", "Reservation", "Home", null, new { style = "color:#000;font-weight:500;" })</li>
                            <li class="nav-item nav-link text-dark">@Html.ActionLink("Vaše rezervace", "ReservedBooks", "Home", null, new { style = "color:#000;font-weight:500;" })</li>
                            <li class="nav-item nav-link text-dark">@Html.ActionLink("Odhlásit", "LogOut", "Home", null, new { style = "color:#000;font-weight:500;" })</li>
                        }
                    </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
